@model onlineTicketing.Models.TicketListViewModel

@{
    ViewData["Title"] = "Tickets";
}

<h2>Ticket List</h2>
<hr />

<form asp-action="filter" method="get" class="form-inline mb-4">
    <div class="form-group mr-3">
        <label for="status" class="mr-1">Status:</label>
        <select name="status" id="status" class="form-control">
            <option value="">All</option>
            @foreach (var item in Model.StatusOptions)
            {
                <option value="@item.Value" selected="@(Model.SelectedStatus == int.Parse(item.Value))">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="priority" class="mr-1">Priority:</label>
        <select name="priority" id="priority" class="form-control">
            <option value="">All</option>
            @foreach (var item in Model.PriorityOptions)
            {
                <option value="@item.Value" selected="@(Model.SelectedPriority == int.Parse(item.Value))">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="category" class="mr-1">Category:</label>
        <select name="category" id="category" class="form-control">
            <option value="">All</option>
            @foreach (var item in Model.CategoryOptions)
            {
                <option value="@item.Value" selected="@(Model.SelectedCategory == item.Value)">@item.Text</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Subject</th>
            <th>Category</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Created At</th>
            @* <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.Subject</td>
                <td>@ticket.Category</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Status</td>
                <td>@ticket.CreatedAt.ToShortDateString()</td>
                <td>
                    @*  <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info btn-sm">Details</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>