<hr />

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" asp-for="TicketId" />

    <div class="form-group">
        <label asp-for="NewStatus"></label>
        <select asp-for="NewStatus" asp-items="Model.StatusOptions" class="form-control">
            <option value="">-- Select New Status --</option>
        </select>
        <span asp-validation-for="NewStatus" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update Ticket</button>
    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary mt-3">Cancel</a>
</form>
