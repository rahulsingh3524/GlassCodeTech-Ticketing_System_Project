@model onlineTicketing.Models.CreateTicketViewModel

@{
    ViewData["Title"] = "Create New Ticket";
}

<h3>Create New Ticket</h3>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Subject">Subject</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Priority">Priority</label>
        <select asp-for="Priority" class="form-control"
                asp-items="@(new SelectList(ViewBag.PriorityOptions, "Value", "Text"))">
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label for="Attachment">Add Attachment</label>
        <input type="file" asp-for="Attachment" class="form-control-file" />
        <span asp-validation-for="Attachment" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit Ticket</button>
</form>

