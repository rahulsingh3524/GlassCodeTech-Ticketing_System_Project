@using GlassCodeTech_Ticketing_System_Project.Services
@inject CookieService CookieService

@{
    var logindata = new LoginDetail();

    var dict = CookieService.GetDictionaryFromCookie("UI");
 
    string username = DatabaseHelper.Decrypt(dict[logindata.Username]);
}


<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                GCT_Ticketing_System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="DashboardIndex">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Notification Bell -->
                    <li class="nav-item me-2">
                        <button id="notificationBell" class="btn btn-link p-0 position-relative" type="button" aria-label="Show notifications">
                            <i class="bi bi-bell-fill fs-5"></i>
                            <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none;">0</span>
                        </button>
                       

                            <div id="notificationDropdown" class="notification-dropdown"
                                 style="display:none; max-height:420px; overflow-y:auto;">
                               @*  <div class="bg-primary bg-opacity-10 py-2 px-3 rounded-top">
                                    <span class="fw-semibold text-primary">Notifications</span>
                                </div> *@
                                <div id="notificationList"></div>
                                <div class="notification-divider"></div>
                               @*  <div class="text-end px-3 pb-2">
                                    <button id="markAllRead" class="btn btn-sm btn-outline-primary">Mark All Read</button>
                                </div> *@
                            </div>
                        
                    </li>
                   
                    <!-- Username Dropdown -->
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                @*     else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">
                                <i class="bi bi-person"></i> -
                            </a>
                        </li>
                    } *@
                </ul>
            </div>
        </div>
    </nav>
</header>
<!-- Manual Dropdown Test (if Bootstrap not working) -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        // Manual dropdown toggle (fallback)
        $('#userDropdown').click(function(e) {
            e.preventDefault();
            $(this).next('.dropdown-menu').toggle();
        });

        // Close dropdown when clicking outside
        $(document).click(function(e) {
            if (!$(e.target).closest('.dropdown').length) {
                $('.dropdown-menu').hide();
            }
        });
    });
</script>